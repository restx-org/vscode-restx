{
  "name": "restx",
  "displayName": "RESTx",
  "description": "Language support for RESTx API specification files",
  "version": "0.1.0",
  "publisher": "restx-org",
  "repository": {
    "type": "git",
    "url": "https://github.com/restx-org/vscode-restx"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:restx"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "restx",
        "aliases": ["RESTx", "restx"],
        "extensions": [".restx"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "restx",
        "scopeName": "source.restx",
        "path": "./syntaxes/restx.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --allow-missing-repository"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.22.0"
  }
}
